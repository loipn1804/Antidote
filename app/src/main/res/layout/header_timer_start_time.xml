<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="#fafafa">

        <TextView
            android:id="@+id/txtDayOfTotal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="DAY 2 OF 7"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_header_timer_txt"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current"
                    android:textSize="@dimen/txt_15sp"
                    android:textColor="@color/blue_home"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/imvCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_imv_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Juicing Timing"
                    android:textSize="@dimen/txt_15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/txtCountDownTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:15:20"
                        android:textSize="36dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/blue_home" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textSize="@dimen/txt_15sp"
                    android:textColor="@color/black_33"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/imvNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_imv_detail" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_lnl_home"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7 days | Antidote Breakfast Project"
            android:textColor="@color/blue_home"
            android:textSize="@dimen/txt_18sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/lnlCancelTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_blue"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Timer"
                android:textSize="@dimen/txt_18sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>